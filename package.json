{
  "name": "n8n-nodes-circle",
  "version": "1.0.0",
  "description": "n8n community nodes for Circle's stablecoin ecosystem - USDC, EURC, CCTP cross-chain transfers, and Circle Platform APIs",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "circle",
    "usdc",
    "eurc",
    "stablecoin",
    "cctp",
    "cross-chain",
    "blockchain",
    "payments",
    "web3",
    "cryptocurrency",
    "defi"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://velobpa.com",
  "author": {
    "name": "Velocity BPA",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-circle.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/CirclePlatform.credentials.js",
      "dist/credentials/CircleBlockchain.credentials.js",
      "dist/credentials/CircleCctp.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Circle/Circle.node.js",
      "dist/nodes/Circle/CircleTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0"
  },
  "dependencies": {
    "@circle-fin/circle-sdk": "^5.0.0",
    "@solana/web3.js": "^1.91.1",
    "@stellar/stellar-sdk": "^11.2.2",
    "axios": "^1.6.7",
    "ethers": "^6.11.1"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
